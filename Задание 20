// Задача 1
#include <iostream>
#include <ctime>
#include <stdio.h>
using namespace std;
int main(void)
{
    int a[10], b[10], c[10];
    int n;
    cout << "n: ";
    cin >> n;
    int i;
    for (i = 0; i < n; ++i) 
	{
        printf("a[%i] : ", i + 1);
        scanf("%i", &a[i]);
    }
    int k = 0;
    b[k] = 1;
    c[k] = a[k];
    for (i = 1; i < n; ++i) 
	{
        if (a[i - 1] == a[i]) ++b[k];
        else 
		{
            ++k;
            b[k] = 1;
            c[k] = a[i];
        }
    }
    for (i = 0; i <= k; ++i) printf(" %i>%i:%i\n", i + 1, b[i], c[i]);
    return 0;
}


// Задача 2
#include <iostream>
#include <ctime>
#include <stdio.h>
using namespace std;
int main(void)
{
	int a[20], b[20];
	int n, l;
	cout << "n: ";
	cin >> n;
	printf("L: ");
	scanf("%i", &l);
	int i;
	for (i = 0; i < n; ++i) 
	{
		printf("a[%i] : ", i + 1);
		scanf("%i", &a[i]);
	}
	int i2 = -1, len = 1, i3, endn = n;
	for (i = 1; i < n; ++i) 
	{
		if (a[i - 1] != a[i]) 
		{
			if (len < l) 
			{
				b[++i2] = 0;
				endn -= len - 1;
			}
			else 
			{
				for (i3 = 0; i3 < len; ++i3) 
				{
					b[++i2] = a[i - 1];
				}
			}
			len = 0;
		}
		++len;
	}
	if (len < l) 
	{
		b[++i2] = 0;
		endn -= len - 1;
	}
	else {
		for (i3 = 1; i3 <= len; ++i3) 
		{
			b[++i2] = a[i - 1];
		}
	}
	for (i = 0; i < endn; ++i) 
	{
		a[i] = b[i];
	}
	for (i = 0; i < endn; ++i) 
	{
		printf("a  %i : %i\n", i + 1, a[i]);
	}
	return 0;
}


// Задача 3
#include <iostream>
#include <ctime>
#include <stdio.h>
using namespace std;
int main(void)
{
    int a[20], b[20];
    int n, k;
    cout << "n: ";
    cin >> n;
    cout << "k: ";
    cin >> k;
    int i;
    const int n = 8;
    int a[n] = { 0, 1, 2, 3, 4, 2, 5, 6 };
    int nk = 1, bs = 1, ls = (k == 1 ? 1 : 0), bns;
    for (i = 1; i < n; ++i) 
	{
        if (a[i - 1] != a[i]) 
		{
            nk++;
            if (nk == k) bs = i;
            bns = i;
        }
        if (nk == k) ls++;
    }
    int i2 = -1;
    for (i = 0; i < bs; ++i) 
	{
        b[++i2] = a[i];
    }
    for (i = bns; i < n; ++i) 
	{
        b[++i2] = a[i];
    }
    for (i = bs + ls; i < bns; ++i) 
	{
        b[++i2] = a[i];
    }
    for (i = bs; i < bs + ls; ++i) 
	{
        b[++i2] = a[i];
    }
    for (i = 0; i < n; ++i) 
	{
        a[i] = b[i];
    }
    for (i = 0; i < n; ++i) 
	{
        printf("a %i : %i\n", i + 1, a[i]);
    }
}


// Задача 4
#include <stdio.h>
#include <math.h>
#include <iostream>
#include <ctime>
using namespace std;
int main(void)
{
	float a[10][2];
	int n;
	cout << "n: ";
	cin >> n;
	int i;
	for (i = 0; i < n; ++i) 
	{
		printf("a[%i]:\n", i + 1);
		printf("x= ");
		scanf("%f", &a[i][0]);
		printf("y= ");
		scanf("%f", &a[i][1]);
	}
	int amax = 0;
	float r, rmax;
	for (i = 0; i < n; ++i) 
	{
		if (a[i][0] < 0 && a[i][1]>0) 
		{
			r = sqrt(pow(a[i][0], 2) + pow(a[i][1], 2));
			if (r > rmax || i == 0)
			{
				rmax = r;
				amax = i;
			}
		}
	}
	printf("A %i :\n x: %f\n y: %f\n", amax + 1, a[amax][0], a[amax][1]);
}


// Задача 5
#include <stdio.h>
#include <math.h>
#include <iostream>
using namespace std;
int main(void)
{
	float a[10][2];
	int n;
	cout << "n: ";
	cin >> n;
	int i;
	for (i = 0; i < n; ++i) 
	{
		printf("a[%i]:\n", i + 1);
		printf("x= ");
		scanf("%f", &a[i][0]);
		printf("y= ");
		scanf("%f", &a[i][1]);
	}
	int p1, p2, p3, i2, i3;
	float p, pmax = 0;
	for (i = 0; i < n; ++i)
		for (i2 = i + 1; i2 < n; ++i2)
			for (i3 = i2 + 1; i3 < n; ++i3) 
			{
				p = 0;
				p += sqrt(pow(a[i][0] - a[i2][0], 2) + pow(a[i][1] - a[i2][1], 2));
				p += sqrt(pow(a[i][0] - a[i3][0], 2) + pow(a[i][1] - a[i3][1], 2));
				p += sqrt(pow(a[i2][0] - a[i3][0], 2) + pow(a[i2][1] - a[i3][1], 2));
				if (p > pmax) {
					p1 = i;
					p2 = i2;
					p3 = i3;
					pmax = p;
				}
			}
	cout << pmax;
	printf("A %i :\n x: %f\n y: %f\n", p1 + 1, a[p1][0], a[p1][1]);
	printf("A %i :\n x: %f\n y: %f\n", p2 + 1, a[p2][0], a[p2][1]);
	printf("A %i :\n x: %f\n y: %f\n", p3 + 1, a[p3][0], a[p3][1]);
	return 0;
}
