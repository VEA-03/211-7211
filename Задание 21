// Задача 1
#include <stdio.h>
#include <math.h>
#include <iostream>
using namespace std;
int main(void)
{
    int a[10][10];
    int m;
    cout << "m: ";
    cin >> m;
    int i, j;
    for (i = 0; i < m; ++i) 
    {
        printf("%i : \n", i + 1);
        for (j = 0; j < m; ++j) 
        {
            printf("%i : ", j + 1);
            scanf("%i", &a[i][j]);
        }
    }
    int i2;
    for (i2 = 0; i2 < m / 2; ++i2) 
    {
        for (j = i2; j < m - i2; ++j) 
        {
            printf(" %i", a[j][i2]); 
        }
        for (i = i2 + 1; i <= m - i2 - 1; ++i) 
        { 
            printf(" %i", a[m - i2 - 1][i]); 
        }
        for (j = m - i2 - 2; j >= i2; --j) 
        { 
            printf(" %i", a[j][m - i2 - 1]); 
        }
        for (i = m - i2 - 2; i >= i2 + 1; --i) 
        { 
            printf(" %i", a[i2][i]); 
        }
        printf("\n");
    }
    printf(" %i\n", a[m / 2][m / 2]);
}


// Задача 2
#include <stdio.h>
#include <math.h>
#include <iostream>
using namespace std;
int main()
{
    int m, n, k, s = 0, p = 1;
    cout << "m: ";
    cin >> m;
    cout << "n: ";
    cin >> n;
    cout << "k: ";
    cin >> k;
    int a[m][n];
    for (int i = 0; i < m; ++i) 
    {
        for (int j = 0; j < n; ++j)
            cin >> a[i][j];
    }
    for (int i = 0; i < n; ++i) 
    {
        s += a[k - 1][i];
        p *= a[k - 1][i];
    }
    cout << s << " " << p;
    return 0;
}

// Задача 3
#include <stdio.h>
#include <math.h>
#include <iostream>
using namespace std;
int main()
{
    int m, n, s, res = INT_MAX, pos = 0;
cout << "m: ";
cin >> m;
cout << "n: ";
cin >> n;
    int a[m][n];
    for (int i = 0; i < m; ++i) 
    {
        for (int j = 0; j < n; ++j)
            cin >> a[i][j];
    }
    for (int i = 0; i < n; ++i) 
    {
        s = 1;
        for (int j = 0; j < m; ++j)
            s *= a[j][i];
        if (res > s) 
        {
            pos = i + 1;
            res = s;
        }
    }
    cout << pos << ' ' << res << endl;
}


// Задача 4
#include <iomanip>
#include <iostream>
using namespace std;
int main(void) 
{
    int i, k, m, n;
    cout << "m: ";
    cin >> m;
    cout << "n: ";
    cin >> n;
    int a[m][n];
    srand(time(NULL));
    for (i = 0; i < m; i++) 
    {
        for (k = 0; k < n; k++)
            cout << setw(6) << (a[i][k] = rand() % 101 - 50);
        cout << endl;
    }
    cout << endl;
    for (k = 0; k < n; k++) 
    {
        int sum = 0;
        for (i = 0; i < m; i++)
            sum += a[i][k];
        double avg = (double)sum / m;
        int count = 0;
        for (i = 0; i < m; i++)
            if (a[i][k] > avg)
                count++;
        cout << setw(6) << count;
    }
    cout << endl;
}


// Задача 5
#include <iostream>
#include <stdio.h>
using namespace std;
int main()
{
    srand(time(NULL));
    const unsigned n = 3;
    const unsigned m = 4;
    int** mat = new int* [n];
    for (int i = 0; i < n; ++i)
        mat[i] = new int[m];
    for (int i = 0; i < n; i++) 
    {
        for (int j = 0; j < m; j++) 
        {
            mat[i][j] = rand() % 10 + 3;
        }
    }
    int rowNum = 0;
    bool flag = false;
    for (int j = 0; j < m; j++)
    {
        flag = true;
        for (int i = 0; i < n; i++) 
        {
            if (mat[i][j] % 2 == 0) 
            {
                flag = false;
            }
        }
        if (flag) rowNum = j + 1;
    }
    for (int i = 0; i < n; i++) 
    {
        for (int j = 0; j < m; j++)
        {
            cout << setw(3) << mat[i][j] << " ";
        }
        cout << endl;
    }
    cout << endl << " Row: " << rowNum;
}
