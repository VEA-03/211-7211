// задача 1
#include <iostream>
#include <stdio.h>
int n;
using namespace std;
int main()
{
	cout << "n= ";
	cin >> n;
    n %= 3600;
	cout << n / 60;
	cout << n % 60;
    return 0;
}


// Задача 2
# include <iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "Russian");
	int x;
	int k;
	cout << "Введите целое число:  ";
	cin >> k;
	x = (k % 7);
	cout << "Результат = " << x << endl;
	return 0;
}


// Задача 3
# include <iostream>
using namespace std;
int main() {
	int n;
	int k;
	cout << "Введите целое число:  ";
	cin >> k;
	n = (k % 7) + 1;
	cout << "Результат = " << n << endl;
	return 0;
}


//Задача 4
#include <iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "Russian");
	int A, B, C;
	int x, y, n;
	cout << "A: ";
	cin >> A;
	cout << "B: ";
	cin >> B;
	cout << "C: ";
	cin >> C;
	x = A * B;
	y = C * C;
	n = x / y;
	cout << "Результат:" << n;
}


// Задача 5
#include <iostream>
using namespace std;
int main() {
	setlocale(LC_ALL, "Russian");
	int x, y;
	cout << "Введите целое число:";
	cin >> x;
	y = (x / 100) + 1;
	cout << y;
}
